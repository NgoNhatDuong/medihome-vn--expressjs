{
	"name": "medihome-vn--expressjs",
	"version": "1.0.0",
	"description": "Medihome",
	"main": "dist/index.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"install-lib": "npm i dotenv express helmet jsonwebtoken bcrypt mysql typeorm nodemailer node-schedule reflect-metadata && npm i -D @types/node @types/express @types/jsonwebtoken @types/bcrypt @types/nodemailer @types/node-schedule",
		"install-env": "npm i -D nodemon typescript@4.5.5 ts-node eslint prettier @typescript-eslint/eslint-plugin @typescript-eslint/parser eslint-config-prettier eslint-plugin-prettier eslint-plugin-import eslint-config-airbnb-typescript",
		"install-other": "npm i morgan winston winston-daily-rotate-file && npm i -D @types/morgan",
		"typeorm-migration-create": "typeorm migration:create -n CreateTable2",
		"typeorm-migration-run": "typeorm migration:run",
		"typeorm-migration-revert": "typeorm migration:revert",
		"watch-tsc": "tsc --watch --project tsconfig.json",
		"watch-dist": "nodemon --delay 1.5 --watch dist --exec \"node dist/index.js\"",
		"watch-src": "nodemon --delay 1.5 --ext ts --watch src --exec \"npx tsc && node dist/index.js\"",
		"watch-tsnode": "nodemon --delay 1.5 --ext ts --watch src src/index.ts",
		"build": "eslint . --ext .ts --fix && tsc --build --clean && tsc",
		"start": "npm run build && node dist/index.js",
		"stop": "taskkill /f /im node.exe",
		"test": "nodemon --delay 1.5 --watch src src/test.ts"
	},
	"keywords": [],
	"author": "duycode.com",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.0.1",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"helmet": "^5.0.2",
		"jsonwebtoken": "^8.5.1",
		"mysql": "^2.18.1",
		"node-schedule": "^2.1.0",
		"nodemailer": "^6.7.3",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.4",
		"winston": "^3.6.0",
		"winston-daily-rotate-file": "^4.6.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/node": "^17.0.23",
		"@types/node-schedule": "^1.3.2",
		"@types/nodemailer": "^6.4.4",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"eslint": "^8.12.0",
		"eslint-config-airbnb-typescript": "^16.2.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.6.1",
		"ts-node": "^10.7.0",
		"typescript": "^4.5.5"
	}
}
